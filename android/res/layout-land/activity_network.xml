    <!-- android:text="Quick Game"
     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_height="30dip"
        android:adjustViewBounds = "true"-->

    <!-- 20+16 and 100+16 -->
    <ImageButton
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:adjustViewBounds = "true"
        android:scaleType="fitXY"
        android:id="@+id/quickgamebutton"
        android:onClick="startQuickGame"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="116dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/quickgamebutton"
        android:background="@android:color/transparent" />

    <!-- 20+16 and 25+16 -->
    <ImageButton
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:adjustViewBounds = "true"
        android:scaleType="fitXY"
        android:id="@+id/rulesbutton"
        android:onClick="rulesButton"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/rulesbutton"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InvitePlayers"
        android:id="@+id/inviteplayersbutton"
        android:layout_below="@+id/quickgamebutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="invitePlayers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Invitations"
        android:id="@+id/showinvitationsbutton"
        android:layout_below="@+id/inviteplayersbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="showInvitations" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds = "true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:id="@+id/rule1imageview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/rule1"
        android:onClick="rules2"

        android:baselineAlignBottom="false" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds = "true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:id="@+id/rule2imageview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/rule2"
        android:onClick="rules3"

        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds = "true"
        android:id="@+id/rule3imageview"
        android:src="@drawable/rule3"
        android:onClick="closeRules"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/inviteplayersbutton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadinggif"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <!--android:src="@drawable/rule1"
    android:src="@drawable/loadinggif"-->

