<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mygdx.game.NetworkActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Game"
        android:id="@+id/quickgamebutton"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:onClick="startQuickGame" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InvitePlayers"
        android:id="@+id/inviteplayersbutton"
        android:layout_below="@+id/quickgamebutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="invitePlayers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Invitations"
        android:id="@+id/showinvitationsbutton"
        android:layout_below="@+id/inviteplayersbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="showInvitations" />

</RelativeLayout>
